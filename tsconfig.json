{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "moduleTypes": {
      "./src/**/*.ts": "esm",
      "./node_modules/**/*.ts": "esm",
    }
  }
}
